<div>
        <% book.book_comments.each do |book_comment| %>
          <div><%= image_tag book_comment.user.get_profile_image, size:'50x50' %>
          <%= book_comment.comment %></div>
          <%= book_comment.user.name %>
          <% if book_comment.user == current_user %>
            <%= link_to "Destroy", book_book_comment_path(book_comment.book, book_comment), method: :delete, remote: true, class: "btn btn-sm btn-danger" %>
          <% end %>
        <% end %>
      </div><br>
      <div>
        <%= form_with model: [book, book_comment], local: false do |f| %>
          <%= f.text_area :comment, size: "60x5", placeholder:"コメントをここに" %>
          <br><%= f.submit "送信" %>
        <% end %>
      </div>