<%= form_with model: group, local: true do |f| %>
  <div class="form-group text-center">
    <%= f.label :グループ名 %>
    <%= f.text_field :name, class: 'name form-control' %>
  </div>

  <div class="form-group text-center">
    <%= f.label :紹介文 %>
    <%= f.text_area :introduction, class: 'form-control' %>
  </div>

  <div class="form-group text-center">
    <%= f.label :グループ画像 %>
    <%= f.file_field :group_image, accept: "image/*", class: "form-control-file mw-auto" %>
  </div>

  <div class="form-group text-center">
    <%= f.submit class: 'btn btn-lg btn-block btn-info' %>
  </div>
<% end %>